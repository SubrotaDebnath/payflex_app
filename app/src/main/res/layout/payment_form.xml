<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/paymentMethodeActivity"
    android:background="@color/light_backgroundColor"
    tools:context=".Activityes.PaymentActivity.PaymentActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp"
                android:background="@drawable/ashes_back_squere_border"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/referenceImg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/icon"
                    android:layout_marginStart="3dip"
                    android:contentDescription="@string/todo" />
                <ImageView
                    android:id="@+id/addImg"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_add_a_photo"
                    android:layout_marginStart="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="0dp"
                    android:background="@color/barColor"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:text="@string/payment_mode"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <Spinner
                        android:id="@+id/paymentMethod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="0dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:text="@string/bank_name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <Spinner
                        android:id="@+id/bankList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="0dp"
                    android:background="@color/barColor"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:text="@string/date"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <LinearLayout
                        android:id="@+id/payDatePick"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/payDate"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:hint="@string/document_date_hint"
                            android:text=""/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_baseline_calendar_today_theam"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:text="@string/virtual_account"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/virtualAccount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/referenceBlockLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/barColor"
                    android:paddingLeft="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:text="@string/reference_no"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <EditText
                        android:id="@+id/referenceNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:hint=""
                        android:inputType="text"
                        android:textColor="#000000"
                        android:layout_weight="2"
                        android:autofillHints="" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/amountBlockLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="@string/payment_amount"
                        android:textColor="#000000"/>
                    <EditText
                        android:id="@+id/payAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:hint=""
                        android:inputType="number"
                        android:textColor="#000000"
                        android:layout_weight="2"
                        android:autofillHints="" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/paySubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/submit_btn"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>